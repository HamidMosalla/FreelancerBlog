@using System.Threading.Tasks
@using FreelancerBlog.ViewModels.Account
@model FreelancerBlog.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازنشانی پسورد";
}


@section styles{
    <style>
        .colorgraph {
            height: 5px;
            border-top: 0;
            background: #c4e17f;
            border-radius: 5px;
            background-image: -webkit-linear-gradient(left, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            background-image: -moz-linear-gradient(left, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            background-image: -o-linear-gradient(left, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            background-image: linear-gradient(to right, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
        }

        .checkbox label::before {
            left: 102px !important;
        }

        .checkbox label::after {
            left: 100px !important;
        }

        .row {
            margin: 0;
        }
    </style>

    <link href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-social/bootstrap-social.css" rel="stylesheet" />
}


<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>بازنشانی پسورد</h1>
                <p>برای بازنشانی پسورد ایمیل خود، و همچنین پسورد جدید خود را وارد کنید.</p>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                    <li><a href="/Home/Index">خانه</a></li>
                    <li class="active"><a href="/Account/ResetPassword">بازنشانی پسورد</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-4">
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal" role="form">


            <div class="col-md-10">
                <h2>
                    بازنشانی پسورد <br/><small>پسورد خود را بازنشانی کنید.</small>
                </h2>
                <hr class="colorgraph">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <input asp-for="Code" type="hidden" />

            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="Email" placeholder="ایمیل" class="form-control input-lg" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="Password" placeholder="پسورد" class="form-control input-lg" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" placeholder="تایید پسورد" class="form-control input-lg" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-lg btn-success" style="width: 100%;">بازنشانی</button>
                    <hr class="colorgraph">
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
