@using System.Threading.Tasks
@using WebFor.Web.Areas.Admin.ViewModels.Portfolio
@model List<PortfolioViewModel>

<div class="container">
    <div class="row">

        <div class="col-md-3">
            <h3>آخرین پروژه ها</h3>
            <p>آخرین پروژه های انجام شده با جزئیات و عکس</p>
            <div class="btn-group">
                <a class="btn btn-danger" href="#scroller" data-slide="next"><i class="fa fa-angle-right"></i></a>
                <a class="btn btn-danger" href="#scroller" data-slide="prev"><i class="fa fa-angle-left"></i></a>
            </div>
            <p class="gap"></p>
        </div>


        <div class="col-md-9">
            <div id="scroller" class="carousel slide">
                <div class="carousel-inner">

                    @for (int i = 0; i < (Model.Count % 3 == 0 ? (Model.Count / 3) : (Model.Count / 3) + 1); i++)
                    {
                        <div class="item @(i == 0 ? "active" : string.Empty)">
                            <div class="row">


                                @foreach (var portfolio in Model.Skip(i * 3).Take(3))
                                {
                                    <div class="col-xs-4">
                                        <div class="portfolio-item">
                                            <div class="item-inner">
                                                <img class="img-responsive" src="~/images/portfolio/thumb/@portfolio.PortfolioThumbnail" alt="@portfolio.PortfolioTitle">
                                                <h5>
                                                    @portfolio.PortfolioTitle
                                                </h5>
                                                <div class="overlay">
                                                    <a class="preview btn btn-danger" title="@portfolio.PortfolioTitle" href="~/images/portfolio/thumb/@portfolio.PortfolioThumbnail" ><i class="fa fa-eye"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    }



                </div>
            </div>
        </div>


    </div>
</div>