@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="container">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        @*<a class="navbar-brand" href="/Home/Index"><img src="~/images/logo.png" alt="logo"></a>*@

    </div>
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li class="active"><a href="/Home/Index">@Localizer["Home"]</a></li>
            @if (User.IsInRole("admin"))
            {
                <li><a href="/Admin/ControlPanel/Index">@Localizer["Manage"]</a></li>
            }
            <li><a href="/SiteOrder/Index">@Localizer["Orders"]</a></li>
            <li><a href="/Portfolio/Index">@Localizer["Portfolio"]</a></li>
            <li><a href="/Home/Services">@Localizer["Services"]</a></li>
            <li><a href="/Home/Faq">@Localizer["FAQ"]</a></li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Localizer["OtherPages"]<i class="fa fa-angle-down"></i></a>
                <ul class="dropdown-menu">
                    @*<li><a href="/Home/Careers">@Localizer["Jobs"] </a></li>
                    <li class="divider"></li>*@
                    <li><a href="/Home/PrivacyPolicy">@Localizer["PrivacyPolicy"]</a></li>
                    <li><a href="/Home/TermsAndConditions">@Localizer["TermsAndConditions"]</a></li>
                </ul>
            </li>

            <li><a href="/Article/Index">@Localizer["Blog"]</a></li>
            <li><a href="/Home/About">@Localizer["AboutUs"]</a></li>
            <li><a href="/Contact/Create">@Localizer["ContactUs"]</a></li>
        </ul>
        @await Html.PartialAsync("_LoginPartial")
    </div>
</div>