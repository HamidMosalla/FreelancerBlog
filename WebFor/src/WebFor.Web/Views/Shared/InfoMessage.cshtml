@{
    ViewBag.Title = "اطلاع رسانی";
}

<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>اطلاع رسانی</h1>
                <p>جهت اظلاع</p>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                    <li><a href="/Home/Index">خانه</a></li>
                    <li class="active">اطلاع رسانی</li>
                </ul>
            </div>
        </div>
    </div>
</section>

@if (ViewBag.InfoMessage == "RegistrationConfirmEmail")
{
    <div class="row" style="padding: 20px;">
        <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
            <div class="alert alert-warning">
                <h2 class="text-info text-center">نام کاربری شما در سیستم ثبت شد، ولی تا زمان تایید آن از طریق ایمیل اجازه ورود ندارید. ما یک ایمیل حاوی لینک فعال سازی برای شما ارسال کردیم، لطفا ایمیل خود را چک کنید، اگر ایمیل در اینباکس شما موجود نبود، هرزنامه های خود را چک کنید.</h2>
                <a class="btn btn-success" href="/Home/Index">بازگشت به خانه</a>
            </div>
        </div>
    </div>
}

@if (ViewBag.InfoMessage == "EmailConfirmed")
{
    <div class="row" style="padding: 20px;">
        <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
            <div class="alert alert-warning">
                <h2 class="text-info text-center">اکانت شما با موفقیت تایید شد، هم اکنون میتوانید به سایت وارد شوید.</h2>
                <a class="btn btn-info" href="/Account/Login">ورود</a>
                <a class="btn btn-success" href="/Home/Index">بازگشت به خانه</a>
            </div>
        </div>
    </div>
}


@if (ViewBag.InfoMessage == "ResendConfirmEmailSent")
{
    <div class="row" style="padding: 20px;">
        <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
            <div class="alert alert-warning">
                <h2 class="text-info text-center">یک ایمیل  حاوی لینک فعال سازی برای شما ارسال کردیم، لطفا ایمیل خود را چک کنید، اگر ایمیل در اینباکس شما موجود نبود، هرزنامه های خود را چک کنید.</h2>
                <a class="btn btn-success" href="/Home/Index">بازگشت به خانه</a>
            </div>
        </div>
    </div>
}

@if (ViewBag.InfoMessage == "ForgotPasswordEmailSent")
{
    <div class="row" style="padding: 20px;">
        <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
            <div class="alert alert-warning">
                <h2 class="text-info text-center">ایمیلی حاوی توضیحات لازم برای بازیابی پسورد به شما ارسال گردید، لطفا پسورد خود را از طریق لینکی که در ایمیل موجود است بازنشانی کنید.</h2>
                <a class="btn btn-success" href="/Home/Index">بازگشت به خانه</a>
            </div>
        </div>
    </div>
}

@if (ViewBag.InfoMessage == "ResetPasswordConfirmation")
{
    <div class="row" style="padding: 20px;">
        <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
            <div class="alert alert-warning">
                <h2 class="text-info text-center">پسورد شما با موفقیت بازنشانی شد، شما هم اکنون میتوانید با پسورد جدید خود به سایت وارد شوید.</h2>
                <a class="btn btn-success" href="/Home/Index">بازگشت به خانه</a>
            </div>
        </div>
    </div>
}

