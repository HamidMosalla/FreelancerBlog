@using System.Threading.Tasks
@using WebFor.Web.ViewModels.Manage
@model WebFor.Web.ViewModels.Manage.IndexViewModel
@{
    ViewData["Title"] = "تنظیمات کاربری";
}

<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>تنظیمات کاربری</h1>
                <p>در این بخش میتوانید جزئیات نام کاربری خود را تغییر دهید.</p>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                    <li><a href="/Home/Index">خانه</a></li>
                    <li class="active"><a href="/Manage/Index">تنظیمات کاربری</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

@if (TempData["EditProfileMessage"] != null)
{
    if ((string)TempData["EditProfileMessage"] == "EditProfileSuccess")
    {
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            پروفایل شما با موفقیت ویرایش شد.
        </div>
    }

    if ((string)TempData["EditProfileMessage"] == "EditProfileFailed")
    {
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            چیزی برای ذخیره وجود نداشت، یا مشکلی در ویرایش پروفایل شما پیش آمده.
        </div>
    }
}

<p class="text-success">@ViewData["StatusMessage"]</p>
