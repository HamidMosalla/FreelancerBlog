@using System.Security.Claims
@using System.Threading.Tasks
@using WebFor.Web.ViewModels.Article
@model WebFor.Web.Areas.Admin.ViewModels.Portfolio.PortfolioViewModel

@{
    ViewData["Title"] = "جزئیات پورتفولیو";
    ViewData["PortfolioId"] = Model.PortfolioId;
    ViewData["PortfolioTitle"] = Model.PortfolioTitle;
    Layout = "~/views/shared/_PortfolioLayout .cshtml";
}

@section PortfolioStyles{

}

<div class="blog">
    <div class="blog-item">
        @*<img width="100%" alt="" src="images/blog/blog2.jpg" class="img-responsive img-blog">*@
        <div class="blog-content">

            <h3>@Model.PortfolioTitle</h3>

            <div class="entry-meta">
                <span><i class="fa fa-user"></i> <a href="#author-well">&nbsp;حمید مصلی نژاد</a></span>

                <span><i class="fa fa-calendar"></i>&nbsp;تاریخ اتمام پروژه: <span class="persianDate">@Model.PortfolioDateBuilt</span></span>

                <span><i class="fa fa-globe"></i> <a href="@Model.PortfolioSiteAddress">&nbsp;آدرس وب سایت</a></span>

                <span><i class="fa fa-folder"></i> تکنولوژی های مورد استفاده: @Model.PortfolioCategory </span>
            </div>

            <div style="min-width:600px;">
                @Html.Raw(Model.PortfolioBody)
            </div>

            <div class="author well" id="author-well">
                <div class="media">
                    <div class="pull-left">
                        <img alt="" src="~/images/blog/Avatar2016.jpg" class="avatar img-thumbnail">
                    </div>
                    <div class="media-body">
                        <div class="media-heading">
                            <strong>حمید مصلی نژاد</strong>
                        </div>
                        <p>متن نمونه بایو</p>
                    </div>
                </div>
            </div>



        </div>


    </div>
</div>


@section PortfolioScripts{
    <script src="~/lib/pesian-datetime/jalali.js"></script>
    <script src="~/js/webforscripts/portfolio.detail.js"></script>
}